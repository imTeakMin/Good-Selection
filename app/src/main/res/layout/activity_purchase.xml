<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PurchaseActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/text_point"
            android:layout_width="206dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="포인트" />

        <TextView
            android:id="@+id/text_account"
            android:layout_width="206dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="계정" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/goods1"
            android:layout_width="206dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/candy" />

        <ImageView
            android:id="@+id/goods2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/pepero" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text="500 포인트"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text="2000포인트"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/purchase_button1"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="구매하기" />

        <Button
            android:id="@+id/purchase_button2"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="구매하기" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/goods3"
            android:layout_width="206dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/homerunball" />

        <ImageView
            android:id="@+id/goods4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/honeychip" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text="3500 포인트"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text="5000포인트"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/purchase_button3"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="구매하기" />

        <Button
            android:id="@+id/purchase_button4"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="구매하기" />

    </LinearLayout>

</LinearLayout>